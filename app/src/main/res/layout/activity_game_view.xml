<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameView">

    <Button
        android:id="@+id/gameBack"
        android:layout_width="70dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="45dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg" />

    <ImageView
        android:id="@+id/scoreBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_alignTop="@+id/gameBack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/game_counter_box" />

    <ImageView
        android:id="@+id/book1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleX=".4"
        android:scaleY=".4"
        android:visibility="invisible"
        app:srcCompat="@drawable/lyahfgg" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleX=".5"
        android:scaleY=".3"
        android:visibility="invisible"
        app:srcCompat="@drawable/red_arrow_png1" />

    <ImageView
        android:id="@+id/book1Broken"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleX=".4"
        android:scaleY=".4"
        android:visibility="invisible"
        app:srcCompat="@drawable/lyahfgg_cracked" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/gameStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameBack"
        android:layout_alignEnd="@+id/gameBack"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="-3dp"
        android:background="@color/green"
        android:backgroundTint="@color/green"
        android:text="Start"
        android:textColor="@color/black"
        app:iconTint="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameBack" />


    <TextView
        android:id="@+id/swipeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scoreBox"
        android:layout_alignTop="@id/scoreBox"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:text=""
        android:textSize="12pt" />

    <TextView
        android:id="@+id/goalCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/scoreBox"
        android:layout_alignBottom="@id/scoreBox"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="1dp"
        android:text="goalCount"
        android:textSize="12pt" />

    <TextView
        android:id="@+id/directions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:text="Swipe across the book in the direction of the arrow!"
        android:textAlignment="center"
        android:textSize="12pt" />

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/gameBack"
        android:layout_alignBottom="@+id/gameBack"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/game_back_button" />
</RelativeLayout>


